<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.DetailBerita"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detail_gambar"
        android:layout_width="@dimen/width_image"
        android:layout_height="@dimen/height_image"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/detail_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:padding="@dimen/mini_size"/>

    <TextView
        android:id="@+id/detail_tgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mini_size"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/detail_penulis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mini_size"
        android:textSize="@dimen/text_size" />

    <TextView
        android:id="@+id/detail_isi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mini_size"
        android:textSize="@dimen/text_size" />

</LinearLayout>